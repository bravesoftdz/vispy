procedure CurUninstallStepChanged(CurUninstallStep: TUninstallStep);
  {Displays message urging user to close VIS and Explorer instances before
  uninstalling. This method is called by uninstaller several times during
  execution.
    @param CurUninstallStep [in] Identifies stage reached by uninstaller.
  }
begin
  if CurUninstallStep = usUninstall then
  begin
    MsgBox(
      'Before continuing to uninstall Version Information Spy '
        + 'please close any open instances of the program. '#13#10#13#10
        + 'You should also close any open Explorer windows.',
      mbInformation,
      MB_OK
    );
  end;
end;

